<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".view.CrearEditarBitacoraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvFormTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva Publicación"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/textColorPrimary"
            android:layout_marginBottom="24dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Contenido">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etContenido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:minLines="4"
                android:textColor="@color/textColorPrimary"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Evento"
            android:textColor="@color/textColorSecondary"
            android:layout_marginTop="24dp"/>
        <Spinner
            android:id="@+id/spinnerTipoEvento"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Importancia"
            android:textColor="@color/textColorSecondary"
            android:layout_marginTop="16dp"/>
        <Spinner
            android:id="@+id/spinnerImportancia"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invernadero"
            android:textColor="@color/textColorSecondary"
            android:layout_marginTop="16dp"/>
        <Spinner
            android:id="@+id/spinnerInvernadero"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zona"
            android:textColor="@color/textColorSecondary"
            android:layout_marginTop="16dp"/>
        <Spinner
            android:id="@+id/spinnerZona"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor"
            android:textColor="@color/textColorSecondary"
            android:layout_marginTop="16dp"/>
        <Spinner
            android:id="@+id/spinnerAutor"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Guardar"
            android:textColor="@color/white"
            app:backgroundTint="@color/azul"
            app:cornerRadius="8dp"/>
    </LinearLayout>
</ScrollView>