<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context=".view.FormProRiegoActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:padding="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="16dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:dividerPadding="12dp">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTituloFormR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crear Programación"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/azul"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Fecha inicio -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha inicio"
                app:startIconDrawable="@drawable/ic_calendar"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFechaInicioR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Fecha fin -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fecha fin"
                app:startIconDrawable="@drawable/ic_calendar"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFechaFinR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Descripción -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción"
                app:startIconDrawable="@drawable/ic_description"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Spinner tipo de riego -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo de riego"
                android:layout_marginBottom="20dp">

                <Spinner
                    android:id="@+id/spinnerTipoRiego"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:padding="8dp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCrearR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crear"
                    style="@style/Widget.MaterialComponents.Button"
                    app:cornerRadius="50dp"
                    android:paddingHorizontal="28dp"
                    android:elevation="4dp"
                    android:backgroundTint="@color/azul" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelarFormR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="50dp"
                    android:layout_marginLeft="16dp"
                    android:paddingHorizontal="28dp"
                    android:textColor="@color/rojodetener" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
