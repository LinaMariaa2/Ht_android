<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvNombreZona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textStyle="bold"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tvDescripcionesZona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tvEstadoZona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tvIdInvernaderoZona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id invernadero"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnIrProRiego"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Riego"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/azul"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/btnIrProIlu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Iluminacion"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/azul"
                android:textColor="@color/white"
                android:layout_marginLeft="40dp"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>