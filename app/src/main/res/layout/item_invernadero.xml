<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvNombreInv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textStyle="bold"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tvDescripcionesInv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tvEstadpInv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tvZonasTotalesInv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zonas Totales"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tvZonasActivasInv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zonas Activas"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/tvResponsableInv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id_responsable"
            android:layout_marginTop="5dp"
            />

        <Button
            android:id="@+id/btnInvZonas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestionar Zonas"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/azul"
            android:textColor="@color/white"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>